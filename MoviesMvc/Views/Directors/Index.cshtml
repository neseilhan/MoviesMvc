@model List<DirectorModel>
 
@{ 
    ViewBag.Title = "Director List";
}

<style type="text/css">
    .myTable {
        background-color: #eee;
        border-collapse: collapse;
    }

        .myTable th {
            background-color: #000;
            color: white;
            width: 10%;
        }

        .myTable td, .myTable th {
            padding: 1px;
            border: 1px solid #000;
        }

</style>
 <h2>@ViewBag.Title</h2>
 <p>
     @*<a href="@Url.Action("Create")" title="Create New Director"> <i class="fa fa-plus"></i>  New Director</a>*@
     <a href="/Directors/Create" ><i class="fa fa-plus"></i> New Director</a>


 </p>
@if (Model != null && Model.Count > 0)
{
                <h5 class="text-secondary">@Model.Count directors found.</h5>
                <table class="myTable">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Surname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().RetiredText)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().MoviesText)
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>

                    <td>
                        @Html.DisplayFor(modeItem => item.RetiredText)
                    </td>
                  
                    <td>
                        @Html.Raw(item.MoviesText)
                    </td>
                    <td style="width: 22%; text-align:right;">
                        <a href="@Url.Action("Edit", new { id = item.Id })" title="Edit Director"><i class="fa fa-pencil-square-o"></i> Edit </a>

                        <a href="@Url.Action("Details", new { id = item.Id })" title="Director Details"><i class="fa fa-info-circle"></i> Details </a>

                        <a href="@Url.Action("Delete", new { id = item.Id })" title="Director Details"><i class="fa fa-trash"></i> Delete</a>
                        
                    </td>

                </tr>
                    }
                </table>

 }
            else
            {
                <p class="text-secondary"> No directors found.</p>
            }
